<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent black (adjust as needed) -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Border -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent inside -->
            <stroke
                android:width="2dp"
                android:color="@android:color/white" /> <!-- White border -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>